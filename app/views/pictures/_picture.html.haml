.col-md-6
	%h2.pull-left.index= picture_counter + 1
	.pull-left= image_tag picture.image, :class => 'img-thumbnail top-ten-image-' + picture_counter.to_s
	.pull-left
		.pull-left{:class => 'likes-' + picture_counter.to_s}
			= picture.score.to_s + ' Likes'
		%br/
		= link_to 'Like', score_picture_path(picture, :page => params[:action]), :class => 'btn btn-primary score-' + picture_counter.to_s, remote: true